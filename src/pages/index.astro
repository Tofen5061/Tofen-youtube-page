---
import CardsComponent from "../components/CardsComponent.astro";
import Layout from "../layouts/Layout.astro";

---


<Layout title="Tofen">
    <main>
        <div class="articles">
          <CardsComponent />
        </div>
    </main>
</Layout>



<style>

.articles{
    display: grid;
    grid-template-columns: repeat(auto-fill,
        minmax(280px,1fr)
    );
    gap: 16px;
    padding: 20px;
    padding-left: 30px;
    justify-content: center;
    align-content: start;
}

main{
    background-color: #f0f2f5;
}

</style>