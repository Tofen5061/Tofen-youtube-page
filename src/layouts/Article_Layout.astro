---
import Layout from "../layouts/Layout.astro"
---
<Layout title="Tofen">
    <main class="articles_layout">
        <div class="display">
            <section class="main_info"></section>
    
            <section class="other_info"><slot name="social_media_1" class="social_media_1"></slot> </section>
        </div>
    
    </main>
</Layout>

<style>

.display{
    display: flex;
    flex-wrap: wrap;
    gap: 4vw;
    min-height: 100vh;
    width: 100%;
    margin-top: 20px;
    justify-self: center;
    justify-content: center;


}

section{
    background-color: #fffaf7;
    height: 100%;
    border-radius: 8px;

    

}

.main_info{
    height: 90%;
    width: 65vw;
    padding-top: 20px;
    padding-left: 15px;
    padding-right: 15px;
    padding-bottom: 20px;
}

.other_info{
    height: 90%;
    width: 20vw;
    padding-top: 15px;
    padding-left: 10px;
    padding-right: 10px;
    padding-bottom: 15px;
    justify-content: center;
}

.social_media_1{
    width: 80% ;
    justify-self: center;

}




</style>